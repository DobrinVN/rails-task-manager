<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><% @task.completed %></p>

<%= link_to 'Edit task', edit_task_path(@task) %>

<%= link_to 'Delete task', destroy_path(@task),
                           method: :delete, 
                           data: { confirm: "Are you sure you want to delete this task?" } %>

<%= link_to 'Back to tasks', tasks_path %>
